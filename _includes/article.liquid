<article>
  <div class="columns is-vbottom">
    <div>
      <h2 class="article-title">
        <a href="{{ url }}">{{ title }}</a>
      </h2>
      <h3 class="article-author">by Stan Lemon</h3>
    </div>
    <h4 class="article-date">{{ date | date: "%b %d, %Y" }}</h4>
  </div>

  <hr>

  {{ content }}

  {% if keepReading %}
    <div class="keep-reading">
      <a href="{{ site.url }}{{ url }}">Keep Reading</a>
    </div>
  {% endif %}

  <hr>
</article>
